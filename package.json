{
  "name": "smart-shopping-list",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "@the-collab-lab/shopping-list-utils": "^2.2.0",
    "firebase": "^9.1.1",
    "focus-trap-react": "^8.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "autoprefixer": "^10.4.2",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "postcss": "^8.4.7",
    "prettier": "^2.2.1",
    "tailwindcss": "^3.0.23",
    "react-scripts": "^5.0.0"
